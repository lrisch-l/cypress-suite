{
  "name": "cypress-suite",
  "version": "1.0.0",
  "description": "Unified Cypress test suite for ServeRest covering UI and API flows with tag-based execution and reporting.",
  "main": "cypress.config.js",
  "scripts": {
    "pretest": "rmdir /s /q cypress\\reports",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write \"cypress/**/*.js\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed --browser chrome",
    "test:ui": "cypress run --env grep=@ui",
    "test:api": "cypress run --env grep=@api",
    "test:smoke": "cypress run --env grep=@smoke",
    "test:regression": "cypress run --env grep=@regression",
    "report:ui": "cypress run --env grep=@ui --reporter cypress-mochawesome-reporter && rename cypress\\reports\\index.html ui-report.html",
    "report:api": "cypress run --env grep=@api --reporter cypress-mochawesome-reporter && rename cypress\\reports\\index.html api-report.html",
    "report:smoke": "cypress run --env grep=@smoke --reporter cypress-mochawesome-reporter",
    "report:regression": "cypress run --env grep=@regression --reporter cypress-mochawesome-reporter",
    "report:tag": "cypress run --env grep=$CYPRESS_grep --reporter cypress-mochawesome-reporter",
    "report:ui:split": "cypress run --spec 'cypress/e2e/ui/**/*.cy.js' --reporter cypress-mochawesome-reporter",
    "report:usuarios": "cypress run --spec 'cypress/e2e/api/usuarios/usuarios.cy.js' --reporter cypress-mochawesome-reporter",
    "report:produtos": "cypress run --spec 'cypress/e2e/api/produtos/produtos.cy.js' --reporter cypress-mochawesome-reporter",
    "report:login": "cypress run --spec 'cypress/e2e/api/login/login.cy.js' --reporter cypress-mochawesome-reporter",
    "report:carrinhos": "cypress run --spec 'cypress/e2e/api/carrinhos/carrinhos.cy.js' --reporter cypress-mochawesome-reporter",
    "report:all:split": "npm run report:usuarios && npm run report:produtos && npm run report:login && npm run report:carrinhos",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json -o cypress/reports/merged.json && npx marge cypress/reports/merged.json -f index -o cypress/reports",
    "report:full": "npm run pretest && npm run report:all:split && npm run report:merge"
  },
  "keywords": [
    "cypress",
    "ui",
    "api",
    "automation",
    "serverest",
    "testing"
  ],
  "author": "Leandro Risch",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "cypress": "^14.5.4",
    "cypress-file-upload": "^5.0.8",
    "cypress-grep": "^3.0.4",
    "cypress-mochawesome-reporter": "^4.0.2",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "prettier": "^3.6.2"
  }
}
