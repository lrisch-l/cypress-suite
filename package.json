{
  "name": "cypress-suite",
  "version": "1.0.0",
  "description": "Unified Cypress test suite for ServeRest covering UI and API flows with tag-based execution and reporting.",
  "main": "cypress.config.js",
  "scripts": {
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write \"cypress/**/*.js\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed --browser chrome",
    "test:ui": "cypress run --env grep=@ui",
    "test:api": "cypress run --env grep=@api",
    "test:smoke": "cypress run --env grep=@smoke",
    "test:regression": "cypress run --env grep=@regression",
    "report:ui": "cypress run --env grep=@ui --reporter cypress-mochawesome-reporter",
    "report:api": "cypress run --env grep=@api --reporter cypress-mochawesome-reporter",
    "report:smoke": "cypress run --env grep=@smoke --reporter cypress-mochawesome-reporter",
    "report:regression": "cypress run --env grep=@regression --reporter cypress-mochawesome-reporter",
    "report:tag": "cypress run --env grep=$CYPRESS_grep --reporter cypress-mochawesome-reporter",
    "report:usuarios": "cypress run --spec 'cypress/e2e/api/usuarios/usuarios.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportFilename=usuarios-report.html",
    "report:produtos": "cypress run --spec 'cypress/e2e/api/produtos/produtos.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportFilename=produtos-report.html",
    "report:login": "cypress run --spec 'cypress/e2e/api/login/login.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportFilename=login-report.html",
    "report:carrinhos": "cypress run --spec 'cypress/e2e/api/carrinhos/carrinhos.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportFilename=carrinhos-report.html",
    "report:all:split": "npm run report:usuarios && npm run report:produtos && npm run report:login && npm run report:carrinhos"
  },
  "keywords": ["cypress", "ui", "api", "automation", "serverest", "testing"],
  "author": "Leandro Risch",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "cypress": "^14.5.4",
    "cypress-grep": "^3.0.4",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "prettier": "^3.6.2",
    "eslint": "^9.30.0",
    "@eslint/js": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0"
  }
}